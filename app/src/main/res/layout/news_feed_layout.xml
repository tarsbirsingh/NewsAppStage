<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/feed_image"
        android:layout_width="@dimen/image_view_width_and_height"
        android:layout_height="@dimen/image_view_width_and_height"
        android:layout_marginRight="@dimen/image_view_margin_right"
        android:adjustViewBounds="true"
        tools:src="@drawable/news" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/feed_title_margin_top"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textSize="@dimen/feed_title_text_size"
            tools:text="xyz" />

        <TextView
            android:id="@+id/feed_section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:textSize="@dimen/section_name_text_view_text_size"
            tools:text="xyz" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feed_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/author_text_view_text_size"
                tools:text="Author" />

            <TextView
                android:id="@+id/feed_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/feed_date_margin_right"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="@dimen/author_text_view_text_size"
                tools:text="21/08/2018" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

