<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/one_zero_zero_dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/feed_image"
        android:layout_width="@dimen/one_two_zero_dp"
        android:layout_height="@dimen/one_zero_zero_dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:contentDescription="@string/imageHere"
        tools:src="@drawable/news" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/title_text_view_margin_bottom"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:layout_marginTop="@dimen/eight_dp"
            android:textSize="@dimen/feed_title_text_size"
            tools:text="@string/Panjab" />

        <TextView
            android:id="@+id/feed_section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:textSize="@dimen/section_name_text_view_text_size"
            tools:text="@string/king" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/eight_dp">

            <TextView
                android:id="@+id/feed_author"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/one_two_text_size_sp"
                tools:text="@string/tarsbir_singh" />

            <TextView
                android:id="@+id/feed_date"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/eight_dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="@dimen/one_two_text_size_sp"
                tools:text="@string/date" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>